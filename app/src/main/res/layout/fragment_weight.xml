<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cpv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@mipmap/bg_diet" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="营养计划"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.easyhealth365.nutritionprescription.view.CircleProgressView
        android:id="@+id/circle_progress_view_weight"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_circle"
        cpv:arcWidth="15dp"
        cpv:endColor="#126b94"
        cpv:labelText=""
        cpv:labelTextSize="30sp"
        cpv:progressTextSize="10sp"
        cpv:scaleCount="1"
        cpv:startColor="#1277d6"
        cpv:textColor="#4F5F6F" />

    <EditText
        android:id="@+id/et_weight_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:layout_marginTop="85dp"
        android:gravity="center"
        android:text="55kg"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="体重管理"
        android:textSize="12sp" />
</RelativeLayout>
