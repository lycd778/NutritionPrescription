            android:text="营养计划"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.easyhealth365.nutritionprescription.view.CircleProgressView
            android:id="@+id/circle_progress_view"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_circle"
            cpv:arcWidth="15dp"
            cpv:endColor="#126b94"
            cpv:labelText=""
            cpv:labelTextSize="30sp"
            cpv:progressTextSize="10sp"
            cpv:scaleCount="1"
            cpv:startColor="#12d699"
            cpv:textColor="#4F5F6F" />

        <TextView
            android:id="@+id/tv_circle_progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="75kg"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_circle_progress_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:text="饮食管理"
            android:textSize="12sp" />

