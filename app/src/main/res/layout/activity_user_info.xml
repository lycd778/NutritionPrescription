<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddfdf"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@mipmap/bg_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_user_info"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_info_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/username"
                android:text="手机号" />

            <TextView
                android:id="@+id/tv_user_info_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_user_info"
                android:gravity="center_horizontal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_info_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/username"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_user_info_realname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_user_info"
                android:gravity="center_horizontal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_info_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/username"
                android:text="性别" />

            <LinearLayout
                android:id="@+id/tv_user_info_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/username"
                    android:text="男" />

                <ImageView
                    android:id="@+id/image_user_info_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@mipmap/ic_user_male_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/username"
                    android:text="女" />

                <ImageView
                    android:id="@+id/image_user_info_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@mipmap/ic_user_female_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_user_info"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_info_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/username"
                android:text="身高" />

            <TextView
                android:id="@+id/tv_user_info_height"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_user_info"
                android:gravity="center_horizontal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_info_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/username"
                android:text="体重" />

            <TextView
                android:id="@+id/tv_user_info_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_user_info"
                android:gravity="center_horizontal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_info_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/username"
                android:text="BMI" />

            <TextView
                android:id="@+id/tv_user_info_bmi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_user_info"
                android:gravity="center_horizontal"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
